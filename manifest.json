{
  "manifest_version": 3,
  "name": "G Tasks Ding",
  "version": "1.0",
  "description": "Plays a satisfying ding sound when you mark a task as completed in Google Tasks.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tasks.google.com/tasks/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "offscreen"
  ]
}